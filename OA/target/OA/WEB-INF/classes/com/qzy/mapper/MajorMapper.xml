<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qzy.mapper.MajorMapper">
    <resultMap id="MajorMap" type="Major">
        <id column="id" property="id"/>
        <result column="major_name" property="major_name"/>
        <result column="major_time" property="major_time"/>
        <result column="major_date" property="major_date"/>
        <result column="major_type" property="major_type"/>
        <result column="major_delete" property="major_delete"/>
        <association property="majorType" javaType="MajorType">
            <id column="id" property="id"/>
            <result column="majortype" property="majortype"/>
        </association>
    </resultMap>
    <insert id="addMajor">
        insert into t_major values (null,#{major_name},#{major_time},#{major_date},#{major_type},0)
    </insert>
    <update id="updateMajor" parameterType="Major">
        update t_major set major_name=#{major_name},major_time=#{major_time},major_date=#{major_date},major_type=#{major_type} where id = #{id}
    </update>
    <update id="deleteMajor">
        update t_major set major_delete = 1 where id = #{id}
    </update>
    <select id="findAllMajor" resultMap="MajorMap">
        select m.*,t.* from t_major m inner join t_majortype t on major_delete = 0 and m.major_type=t.id limit #{pageStart},#{pageSize}
    </select>
    <select id="getTotalCount" resultType="java.lang.Integer">
        select count(id) from t_major where major_delete = 0;
    </select>
    <select id="selectMajorById" resultMap="MajorMap">
        select m.*,t.majortype from t_major m inner join t_majortype t on m.id = #{id}
    </select>
    <select id="findAllMajorType" resultType="com.qzy.bean.MajorType">
        select * from t_majortype
    </select>
</mapper>